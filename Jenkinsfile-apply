pipeline {
  triggers {
    pollSCM("H/3 * * * *")
  }
  options {
    disableConcurrentBuilds()
  }
  agent {
    node{
      label "nodejs"
    }
  }
  stages {
    stage ('Validate configuration resources') {
      steps {
        sh "oc apply --dry-run --validate -k config"
      }
    }
    stage ('Apply resources') {
      when {
        branch "master"
      }
      steps {
        sh "oc apply -k config"
        sh "./wait_oauth.sh"
      }
    }
    stage ('Verify test user') {
      when {
        master "branch"
      }
      steps {
        sh "oc login -u testuser -p redhat123 https://kubernetes.default.svc:443 --insecure-skip-tls-verify"
        sh "oc new-project test-testuser || true"
      }
    }
  }
}
